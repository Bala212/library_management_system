<h1>List of Students</h1>
<%= link_to 'Add new student', new_student_path %>
<br>
<br>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone</th>
            <th colspan = "3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %>
            <tr>
                <td><%= student.name %></td>
                <td><%= student.email %></td>
                <td><%= student.address%></td>
                <td><%= student.phone%></td>
                <td><%= link_to 'View', student_path(student) %></td>
                <td><%= link_to 'Edit', edit_student_path(student) %></td>
                <td><%= link_to 'Delete', student_path(student), data:{ turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
    </tbody>
</table>