<%= render 'homes/first_page'%>
<h1>List of Books</h1>
<%= link_to 'Add new book', new_book_path %>
<br>
<br>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>ISBN</th>
            <th colspan = "3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.genre %></td>
                <td><%= book.isbn %></td>
                <td><%= link_to 'View', book_path(book) %></td>
                <td><%= link_to 'Edit', edit_book_path(book) %></td>
                <td><%= link_to 'Delete', book_path(book), data:{ turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
    </tbody>
</table>